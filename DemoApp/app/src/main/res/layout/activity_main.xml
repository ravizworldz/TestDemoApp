<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="15dp"
        android:background="#ffff00"
        android:layout_margin="20dp"
        >

        <Button android:id="@+id/leftArrowButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_arrow_back_ios_black_24dp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:padding="10dp"
            />
        <TextView android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sjhfshfjksfh"
            android:textSize="20sp"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            />
        <Button android:id="@+id/rigtArrowButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_arrow_forward_ios_black_24dp"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>